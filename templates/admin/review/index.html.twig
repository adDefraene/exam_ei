{% extends 'admin/base.html.twig' %}

{% block title %}Administration des reviews{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des reviews</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Auteur</th>
                    <th>Review</th>
                    <th>Note qualité</th>
                    <th>Note service</th>
                    <th>Note ponctualité</th>
                    <th>Note totale</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for review in pagination.data %}
                    <tr>
                        <td>{{review.id}}</td>
                        <td>{{review.reviewedOrder.customer.evaluationName}}</td>
                        <td>{{review.review}}</td>
                        <td>{{review.starsQuality}}</td>
                        <td>{{review.starsService}}</td>
                        <td>{{review.starsPunctuality}}</td>
                        <td>{{review.averageRating}}</td>
                        <td class="text-center">
                            <a href="{{path('admin_reviews_edit', {'id':review.id})}}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                            <a href="{{path('admin_reviews_delete',{'id':review.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
       {{ pagination.display() }}
    </div>
{% endblock %}
