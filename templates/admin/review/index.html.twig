{% extends 'admin/base.html.twig' %}

{% block title %}Administration des reviews{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des reviews</h1>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Auteur</th>
                    <th>Review</th>
                    <th>Note qualité</th>
                    <th>Note service</th>
                    <th>Note ponctualité</th>
                    <th class="text-center">Note moyenne</th>
                </tr>
            </thead>
            <tbody>
                {% for review in pagination.data %}
                    <tr>
                        <td>{{review.id}}</td>
                        <td>{{review.reviewedOrder.customer.evaluationName}}</td>
                        <td>{{review.review}}</td>
                        <td>
                            <span class="badge badge-warning p-2">{{review.starsQuality}} / 10</span>
                        </td>
                        <td>
                            <span class="badge badge-warning p-2">{{review.starsService}} / 10</span>
                        </td>
                        <td>
                            <span class="badge badge-warning p-2">{{review.starsPunctuality}} / 10</span>
                        </td>
                        <td class="text-center">
                            {% if review.averageRating <= 5 %}
                                <span class="badge badge-danger p-2">{{review.averageRating}} / 10</span>
                            {% else %}
                                <span class="badge badge-success p-2">{{review.averageRating}} / 10</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
       {{ pagination.display() }}
    </div>
{% endblock %}
