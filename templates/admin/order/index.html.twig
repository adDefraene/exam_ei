{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commandes{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des commandes</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Client</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for order in pagination.data %}
                    <tr>
                        <td>{{order.id}}</td>
                        <td>{{order.date | date('Y-m-d h:i')}}</td>
                        <td>{{order.customer.firstName}} {{order.customer.lastName}}</td>
                        <td class="text-center">
                            <a href="{{path('admin_order_delete',{'id':order.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
       {{ pagination.display() }}
    </div>
{% endblock %}
