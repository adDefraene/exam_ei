{% extends 'admin/base.html.twig' %}

{% block title %}Administration des ingrédients{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des ingrédients</h1>
        <a href="{{path("admin_ingredient_add")}}" class="btn btn-success mb-3">Ajouter un ingrédient</a>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for ingredient in pagination.data %}
                    <tr>
                        <td>{{ingredient.id}}</td>
                        <td>{{ingredient.name}}</td>
                        <td>{{ingredient.price}}€</td>
                        <td class="text-center">
                            <a href="{{path('admin_ingredient_edit', {'id':ingredient.id})}}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                            <a href="{{path('admin_ingredient_delete',{'id':ingredient.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
       {{ pagination.display() }}
    </div>
{% endblock %}
