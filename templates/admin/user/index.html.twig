{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des utilisateurs</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th class="text-center">Commandes</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in pagination.data %}
                    <tr>
                        <td>{{user.id}}</td>
                        <td>{{user.firstName}} {{user.lastName}}</td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{user.orders | length }}</span>
                        </td>
                        <td class="text-center">
                            <a href="{{path('admin_user_edit', {'id':user.id})}}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                            <a href="{{path('admin_user_delete',{'id':user.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
       {{ pagination.display() }}
    </div>
{% endblock %}
